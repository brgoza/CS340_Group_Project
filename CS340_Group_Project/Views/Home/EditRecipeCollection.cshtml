@model CS340_Group_Project.Models.RecipeCollectionEditViewModel

<form asp-action="ModifyCollectionDescription" method="post">
    <input type="hidden" asp-for="RecipeCollection.Id" />
    <div class="row">
        <h4>Description</h4>
        <textarea asp-for="RecipeCollection.Description" class="form-control" id="descriptionTextArea" rows="5"></textarea>
        <input type="submit" value="submit" class="submit" />
    </div>
</form>

<h4>Recipes</h4>
@foreach (var recipe in Model.RecipeCollection.Recipes)
{
    <div row>
        <div class="col-sm-3">
            <h5><i>@recipe.Name</i></h5>
            <p>@recipe.Contributor</p>
        </div>
        <div class="col-sm-6">
            @Html.ActionLink("Remove", "RemoveRecipeFromCollection", "Home", new { recipeId = recipe.Id, rcId = Model.RecipeCollection.Id });
        </div>
    </div>
}
<form asp-action="EditRecipeCollection" method="get">
    <input type="hidden" name="rcId" value=@Model.RecipeCollection.Id />
    <input type="text" name="Search" />
    <input type="submit" value="Search" class="submit" />
</form>

@foreach (var recipe in Model.RecipesList)
{
    <div class="row">
        <div class="col-sm-4">
            @recipe.Name
        </div>
        <div class="col-sm-8">
            @recipe.Description
        </div>
        <div class="col-sm-2">
            @Html.ActionLink("Add", "AddRecipeToCollection", "Home", new { recipeId = recipe.Id, rcId = Model.RecipeCollection.Id })
        </div>
    </div>

}
